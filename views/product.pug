extends layout

block content
    .container
        .well.well-sm
            //p #{data.length}
            - var d = data

            strong Display
            .btn-group
                a#list.btn.btn-default.btn-sm(href='#')
                    span.glyphicon.glyphicon-th-list
                    | List
                a#grid.btn.btn-default.btn-sm(href='#')
                    span.glyphicon.glyphicon-th
                    | Grid
    each val in d
        #products.row.list-group
                .item.col-xs-4.col-lg-4
                    .thumbnail
                        img.group.list-group-image(src=val.img, alt='', style='height:250px;')
                        .caption
                            h4.group.inner.list-group-item-heading
                                p=val.title
                            p.group.inner.list-group-item-text
                                p=val.description
                            .row
                                .col-xs-12.col-md-6
                                    p.lead='$' + val.price

                                .col-xs-12.col-md-6
                                    a.btn.btn-success(href='http://www.jquery2dotnet.com') Add to cart
