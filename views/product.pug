block content
    .container
        div.row(style='background:lightyellow;')
            .container
                ul.nav.navbar-nav
                    li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown')
                            | Categories
                            b.caret
                        ul.dropdown-menu
                            li
                                a(href='#') Necklace
                            li
                                a(href='#') Bracelet
                            li
                                a(href='#') Ring

                ul.nav.navbar-nav.navbar-right
                    li(class=(title == 'Cart') ? 'active' : undefined)
                        btn.btn.btn-success(type='button', href='http://www.jquery2dotnet.com')
                            span.fa.fa-shopping-cart
                                | &nbsp;&nbsp;Cart (1) - $99


                ul
                    p(style="text-align:center;color:#980000;font-family: 'Comic Sans MS'; font-size:35px;")
                        b
                            | The Jewelry Shop
        .well.well-sm
            //p #{data.length}
            - var d = data

            strong Display
            .btn-group
                a#list.btn.btn-default.btn-sm(href='#')
                    span.glyphicon.glyphicon-th-list
                    | List
                a#grid.btn.btn-default.btn-sm(href='#')
                    span.glyphicon.glyphicon-th
                    | Grid

        #products.row.list-group
            each val in d
                .item.col-xs-4.col-lg-4
                    .thumbnail
                        img.group.list-group-image(src=val.img, alt='', style='height:250px')
                        .caption
                            h4.group.inner.list-group-item-heading
                                p=val.title
                            p.group.inner.list-group-item-text
                                p=val.description
                            .row
                                .col-xs-12.col-md-6
                                    p.lead='$' + val.price

                                .col-xs-12.col-md-6
                                    a.btn.btn-success(href='http://www.jquery2dotnet.com')
